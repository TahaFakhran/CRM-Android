<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvItemParent"
        android:padding="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ItemCode"
                android:id="@+id/txtItemCode"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ItemName"
                android:id="@+id/txtItemName"
                android:textStyle="italic"
                android:layout_below="@id/txtItemCode"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ItemCatCode"
                android:id="@+id/txtItemItemCatCode"
                android:textStyle="italic"
                android:layout_below="@id/txtItemName"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ItemUnit"
                android:id="@+id/txtItemUnit"
                android:textStyle="italic"
                android:layout_below="@id/txtItemItemCatCode"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
</androidx.cardview.widget.CardView>