<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemAdd">

    <TextView
            android:text="Add Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

    <TextView
            android:text="ItemCode :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
    />

    <TextView
            android:text="ItemName :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
    />

    <TextView
            android:text="ItemCatCode :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="210dp"
    />

    <TextView
            android:text="ItemUnit :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="260dp"
    />

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemCode"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="90dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemName"
            android:layout_below="@id/addItemCode"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemItemCatCode"
            android:layout_below="@id/addItemName"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemUnit"
            android:layout_below="@id/addItemItemCatCode"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
    />
    <Button
            android:text="Add Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddItem"
            android:layout_below="@id/addItemUnit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />
</RelativeLayout>