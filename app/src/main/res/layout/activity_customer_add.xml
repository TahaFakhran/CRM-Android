<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomerAdd">

    <TextView
            android:text="Add Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

    <TextView
            android:text="CustomerCode :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
    />

    <TextView
            android:text="CustomerName :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
    />

    <TextView
            android:text="CustomerAddress :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="210dp"
    />

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addCustomerCode"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="90dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addCustomerName"
            android:layout_below="@id/addCustomerCode"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addCustomerAddress"
            android:layout_below="@id/addCustomerName"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
    />
    <Button
            android:text="Add Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddCustomer"
            android:layout_below="@id/addCustomerAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />
</RelativeLayout>