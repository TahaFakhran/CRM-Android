<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemCatAdd">

    <TextView
            android:text="Add Item Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

    <TextView
            android:text="ItemCatCode :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
    />

    <TextView
            android:text="ItemCatName :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
    />

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemCatCode"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="90dp"
    />
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/addItemCatName"
            android:layout_below="@id/addItemCatCode"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
    />
    <Button
            android:text="Add Item Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddItemCat"
            android:layout_below="@id/addItemCatName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />

</RelativeLayout>